@page "/"
<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<AuthorizeView>
    <Authorized>
        <p>@context.User.Identity?.Name</p>
    </Authorized>
    <NotAuthorized>
        <p>Not logged in</p>
    </NotAuthorized>
</AuthorizeView>

<p><a href="/Account/LoginPassthrough">Generic Login Page</a></p>

@if (FormTemplates != null)
{
    <h2>Form Templates</h2>
    <ul>
        @foreach (var formTemplate in FormTemplates) {
            <li><a href="/Admin/EditFormTemplate/@formTemplate.Id">@formTemplate.Title</a></li>
        }
    </ul>
    <p><a href="/Admin/EditFormTemplate">Add New Form</a></p>
}

<p><a href="/Form/Domain/1">Form ID #1</a></p>