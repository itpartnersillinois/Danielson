    <script>
        function OnScrollEvent() {
            document.documentElement.scrollTop = 0;
        }
        function ExpandAll() {
            document.querySelectorAll("details").forEach((detail) => {
                detail.open = true;
            });
        }
        function CollapseAll() {
            document.querySelectorAll("details").forEach((detail) => {
                detail.open = false;
            });
        }
    </script>
    <HeadOutlet />
</head>

<body>
